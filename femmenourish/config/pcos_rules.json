{
  "rotterdam_criteria": {
    "description": "PCOS diagnosis requires meeting 2 out of 3 Rotterdam criteria",
    "source": "Rotterdam ESHRE/ASRM-Sponsored PCOS Consensus Workshop Group, 2004",
    "criteria": {
      "oligoanovulation": {
        "name": "Oligo-ovulation or Anovulation",
        "description": "Irregular or absent menstrual cycles indicating irregular ovulation",
        "indicators": [
          "Menstrual cycles longer than 35 days",
          "Fewer than 9 periods in 12 months",
          "Absence of menstruation (amenorrhea)",
          "Unpredictable cycle lengths"
        ],
        "weight": 33.3
      },
      "hyperandrogenism": {
        "name": "Clinical or Biochemical Hyperandrogenism",
        "description": "Evidence of elevated male hormones (androgens)",
        "clinical_signs": [
          "Hirsutism (excess facial or body hair)",
          "Acne (especially on jawline, chest, back)",
          "Male-pattern baldness or hair thinning",
          "Oily skin"
        ],
        "biochemical_signs": [
          "Elevated total testosterone",
          "Elevated free testosterone",
          "Elevated androstenedione",
          "Elevated DHEAS"
        ],
        "weight": 33.3
      },
      "polycystic_ovaries": {
        "name": "Polycystic Ovaries on Ultrasound",
        "description": "Evidence of polycystic ovarian morphology on transvaginal ultrasound",
        "ultrasound_criteria": [
          "12 or more follicles measuring 2-9mm in diameter in one ovary",
          "Ovarian volume greater than 10 mL",
          "Increased stromal echogenicity"
        ],
        "weight": 33.4
      }
    },
    "diagnosis_rule": "2_out_of_3"
  },
  
